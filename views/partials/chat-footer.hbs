<script>
// Handle prompt card click - redirect to plan page if NSFW and non-premium
function handlePromptCardClick(element, isNsfw) {
    const subscriptionStatus = window.user ? window.user.subscriptionStatus === 'active' : false;
    const isTemporary = window.user ? !!window.user.isTemporary : true;
    
    if (isNsfw === 'true' && !subscriptionStatus) {
        // User is not premium and trying to access NSFW content
