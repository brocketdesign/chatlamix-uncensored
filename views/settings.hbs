<div class="settings-container">
  <!-- Sidebar Navigation -->
  <div class="settings-sidebar">
    <div class="settings-nav">
      <button class="settings-nav-item active" data-section="profile">
        <div class="nav-item-icon">
          <i class="bi bi-person-circle"></i>
        </div>
        <div class="nav-item-content">
          <div class="nav-item-title">{{translations.setting.profile}}</div>
          <div class="nav-item-subtitle">Personal information</div>
        </div>
        <i class="bi bi-chevron-right nav-item-arrow"></i>
      </button>

      <button class="settings-nav-item" data-section="connections">
        <div class="nav-item-icon">
          <i class="bi bi-share"></i>
        </div>
        <div class="nav-item-content">
          <div class="nav-item-title">{{translations.setting.connections}}</div>
          <div class="nav-item-subtitle">Social accounts</div>
        </div>
        <i class="bi bi-chevron-right nav-item-arrow"></i>
      </button>

      <button class="settings-nav-item" data-section="subscription">
        <div class="nav-item-icon">
          <i class="bi bi-star"></i>
        </div>
        <div class="nav-item-content">
          <div class="nav-item-title">{{translations.setting.subscription}}</div>
          <div class="nav-item-subtitle">Manage your plan</div>
        </div>
        <i class="bi bi-chevron-right nav-item-arrow"></i>
      </button>

      <button class="settings-nav-item" data-section="api">
        <div class="nav-item-icon">
          <i class="bi bi-code-slash"></i>
        </div>
        <div class="nav-item-content">
          <div class="nav-item-title">API</div>
          <div class="nav-item-subtitle">Keys & integrations</div>
        </div>
        <i class="bi bi-chevron-right nav-item-arrow"></i>
      </button>

      <button class="settings-nav-item d-none" data-section="password">
        <div class="nav-item-icon">
          <i class="bi bi-shield-lock"></i>
        </div>
        <div class="nav-item-content">
          <div class="nav-item-title">{{translations.setting.password}}</div>
          <div class="nav-item-subtitle">Security settings</div>
        </div>
        <i class="bi bi-chevron-right nav-item-arrow"></i>
      </button>
    </div>
  </div>

  <!-- Content Area -->
  <div class="settings-content">
    <!-- Profile Section -->
    <div class="settings-section active" id="section-profile">
      <div class="section-header">
        <h2 class="section-title">{{translations.setting.profile}}</h2>
        <p class="section-description">Manage your personal information and preferences</p>
      </div>

      <form id="user-info-form" class="settings-form">
        <!-- Profile Picture Card -->
        <div class="settings-card">
          <div class="card-header">
            <div class="card-icon">
              <i class="bi bi-person-circle"></i>
            </div>
            <div class="card-header-content">
              <h3 class="card-title">{{translations.setting.profilePicture}}</h3>
              <p class="card-subtitle">{{translations.setting.profilePictureDescription}}</p>
            </div>
          </div>
          <div class="card-body">
            <div id="profileSection" data-user-id="{{userData._id}}" class="profile-upload-area">
              <div class="profile-image-wrapper">
                <img id="profileImage" src="/img/avatar.png" alt="Profile Picture" class="profile-image">
                <div class="profile-overlay">
                  <i class="bi bi-camera-fill"></i>
                  <span>{{translations.setting.changePhoto}}</span>
                </div>
              </div>
            </div>
            <input type="file" class="d-none" id="profileImageInput" name="profileImageInput" accept="image/*">
            <div class="alert alert-warning mt-3" role="alert" id="imageModerationFlagged" style="display: none;">
              <i class="bi bi-exclamation-triangle me-2"></i>
              {{translations.setting.imageModerationFlagged}}
            </div>
          </div>
        </div>

        <!-- Personal Information Card -->
        <div class="settings-card">
          <div class="card-header">
            <div class="card-icon">
              <i class="bi bi-person-lines-fill"></i>
            </div>
            <div class="card-header-content">
              <h3 class="card-title">{{translations.setting.personalInformation}}</h3>
              <p class="card-subtitle">{{translations.setting.personalInformationDescription}}</p>
            </div>
          </div>
          <div class="card-body">
            <div class="personal-info-form">
              <div class="info-field">
                <div class="info-field-icon">
                  <i class="bi bi-person"></i>
                </div>
                <div class="info-field-content">
                  <label for="nickname" class="info-field-label">{{translations.setting.nickname}}</label>
                  <input type="text" id="nickname" class="info-field-input" placeholder="{{translations.setting.enterNickname}}" />
                </div>
              </div>

              <div class="info-field">
                <div class="info-field-icon">
                  <i class="bi bi-envelope"></i>
                </div>
                <div class="info-field-content">
                  <label for="inputEmail4" class="info-field-label">{{translations.setting.email}}</label>
                  <input type="email" class="info-field-input" id="inputEmail4" placeholder="{{translations.setting.enterEmail}}" />
                </div>
              </div>

              <div class="info-field" id="ageRangeSection" style="display: none;">
                <div class="info-field-icon">
                  <i class="bi bi-calendar-range"></i>
                </div>
                <div class="info-field-content">
                  <label class="info-field-label">{{translations.setting.ageRange}}</label>
                  <div class="info-field-value">
                    <span id="userAgeRange"></span>
                  </div>
                </div>
              </div>

              <div class="info-field">
                <div class="info-field-icon">
                  <i class="bi bi-gender-ambiguous"></i>
                </div>
                <div class="info-field-content">
                  <label for="gender" class="info-field-label">{{translations.setting.gender}}</label>
                  <select class="info-field-input" id="gender" name="gender">
                    <option value="female">{{translations.setting.female}}</option>
                    <option value="male">{{translations.setting.male}}</option>
                  </select>
                </div>
              </div>

              <div class="info-field">
                <div class="info-field-icon">
                  <i class="bi bi-globe2"></i>
                </div>
                <div class="info-field-content">
                  <label class="info-field-label">{{translations.setting.language}}</label>
                  <div class="dropdown w-100">
                    <button data-user-lang="{{user.lang}}" class="info-field-input dropdown-toggle" type="button" id="languageDropdownMenu" data-bs-toggle="dropdown" aria-expanded="false">
                      <span class="language-text">{{translations.setting.selectLanguage}}</span>
                    </button>
                    <ul class="dropdown-menu w-100" aria-labelledby="languageDropdownMenu">
                      <li><a class="dropdown-item language-select" href="#" data-lang="ja">
                        <span class="flag-emoji">ðŸ‡¯ðŸ‡µ</span>{{translations.setting.japanese}}
                      </a></li>
                      <li><a class="dropdown-item language-select" href="#" data-lang="en">
                        <span class="flag-emoji">ðŸ‡ºðŸ‡¸</span>{{translations.setting.english}}
                      </a></li>
                      <li><a class="dropdown-item language-select" href="#" data-lang="fr">
                        <span class="flag-emoji">ðŸ‡«ðŸ‡·</span>{{translations.setting.french}}
                      </a></li>
                      <li><a class="dropdown-item language-select" href="#" data-lang="hi">
                        <span class="flag-emoji">ðŸ‡®ðŸ‡³</span>{{translations.setting.hindi}}
                      </a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Content Preferences Card -->
        <div class="settings-card">
          <div class="card-header">
            <div class="card-icon">
              <i class="bi bi-sliders"></i>
            </div>
            <div class="card-header-content">
              <h3 class="card-title">{{translations.setting.contentPreferences}}</h3>
              <p class="card-subtitle">{{translations.setting.contentPreferencesDescription}}</p>
            </div>
          </div>
          <div class="card-body">
            <div class="preference-item">
              <div class="preference-info">
                <div class="preference-title">
                  <i class="bi bi-eye me-2"></i>
                  {{translations.setting.showNSFW}}
                  <i class="bi bi-crown-fill premium-badge ms-1" id="nsfw-premium-icon" style="display: none;"></i>
                </div>
                <div class="preference-description">
                  {{translations.setting.showNSFWDescription}}
                </div>
                <div id="nsfw-premium-indicator" class="premium-indicator mt-2" style="display: none;">
                  <i class="bi bi-star-fill me-1"></i>Premium feature required
                </div>
              </div>
              <div class="preference-control">
                <label class="toggle-switch">
                  <input type="checkbox" id="nsfw-toggle">
                  <span class="toggle-slider"></span>
                </label>
              </div>
            </div>
          </div>
        </div>

        <!-- About You Card -->
        <div class="settings-card">
          <div class="card-header">
            <div class="card-icon">
              <i class="bi bi-chat-quote"></i>
            </div>
            <div class="card-header-content">
              <h3 class="card-title">{{translations.setting.aboutYou}}</h3>
              <p class="card-subtitle">{{translations.setting.aboutYouDescription}}</p>
            </div>
          </div>
          <div class="card-body">
            <div class="form-group">
              <label for="bio" class="form-label">
                <i class="bi bi-chat-quote me-1"></i>{{translations.setting.bio}}
              </label>
              <textarea class="form-control" id="bio" name="bio" rows="6" maxlength="400" placeholder="{{translations.setting.bioPlaceholder}}"></textarea>
              <div class="form-text d-flex justify-content-between mt-2">
                <span>{{translations.setting.bioHint}}</span>
                <span class="character-count">
                  <span id="bio-char-count">0</span>/400
                </span>
              </div>
            </div>
          </div>
        </div>

        {{#if isAdmin}}
        <!-- Advanced Settings Card -->
        <div class="settings-card">
          <div class="card-header">
            <div class="card-icon">
              <i class="bi bi-gear"></i>
            </div>
            <div class="card-header-content">
              <h3 class="card-title">{{translations.setting.advancedSettings}}</h3>
              <p class="card-subtitle">{{translations.setting.advancedSettingsDescription}}</p>
            </div>
          </div>
          <div class="card-body">
            <div class="advanced-option">
              <div class="advanced-option-info">
                <div class="advanced-option-title">
                  <i class="bi bi-arrow-clockwise me-2"></i>{{translations.restartOnboarding}}
                </div>
                <div class="advanced-option-description">
                  {{translations.restartOnboardingDesc}}
                </div>
              </div>
              <button type="button" id="restart-onboarding" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-arrow-clockwise me-1"></i>{{translations.restart}}
              </button>
            </div>
          </div>
        </div>
        {{/if}}

        <!-- Save Button -->
        <div class="settings-actions">
          <button type="button" class="btn btn-outline-secondary" onclick="location.reload()">
            <i class="bi bi-arrow-clockwise me-1"></i>{{translations.setting.reset}}
          </button>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle me-1"></i>{{translations.setting.saveUserInfo}}
          </button>
        </div>
      </form>
    </div>

    <!-- Connections Section -->
    <div class="settings-section" id="section-connections">
      <div class="section-header">
        <h2 class="section-title">{{translations.setting.connections}}</h2>
        <p class="section-description">Connect and manage your social media accounts</p>
      </div>

      <!-- SNS Connections Card -->
      <div class="settings-card">
        <div class="card-header">
          <div class="card-icon">
            <i class="bi bi-share"></i>
          </div>
          <div class="card-header-content">
            <h3 class="card-title">{{translations.sns.connected_accounts}}</h3>
            <p class="card-subtitle">{{translations.sns.connections_description}}</p>
          </div>
        </div>
        <div class="card-body">
          <!-- Account Limit Info -->
          <div class="info-banner mb-3">
            <i class="bi bi-info-circle me-2"></i>
            <span id="connectionLimitText">{{translations.sns.loading}}</span>
            <span class="badge bg-primary ms-auto" id="connectionCountBadge">0/1</span>
          </div>

          <!-- Connected Accounts List -->
          <div id="connectedAccountsList" class="connected-accounts-list mb-4">
            <div class="loading-state">
              <div class="spinner-border spinner-border-sm text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
              <div class="mt-2 text-muted small">{{translations.sns.loading_connections}}</div>
            </div>
          </div>

          <!-- Connect New Account -->
          <div class="connect-section">
            <h4 class="connect-title">
              <i class="bi bi-plus-circle me-2"></i>{{translations.sns.connect_new_account}}
            </h4>
            
            <div class="platform-buttons">
              <button type="button" class="platform-btn platform-connect-btn" data-platform="instagram" id="connectInstagramBtn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
                <span>Instagram</span>
              </button>

              <button type="button" class="platform-btn platform-connect-btn" data-platform="twitter" id="connectTwitterBtn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                <span>X (Twitter)</span>
              </button>
            </div>

            <!-- Premium Upsell -->
            <div class="premium-upsell mt-3" id="connectionPremiumUpsell" style="display: none;">
              <i class="bi bi-crown-fill text-warning me-2"></i>
              <div class="flex-grow-1">
                <strong>{{translations.sns.premium_accounts}}</strong>
                <p class="mb-0 small">{{translations.sns.premium_description}}</p>
              </div>
              <button type="button" class="btn btn-warning btn-sm" onclick="loadPlanPage()">
                {{translations.sns.upgrade}}
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Posts Card -->
      <div class="settings-card">
        <div class="card-header">
          <div class="card-icon">
            <i class="bi bi-clock-history"></i>
          </div>
          <div class="card-header-content">
            <h3 class="card-title">{{translations.sns.recent_posts}}</h3>
            <p class="card-subtitle">{{translations.sns.recent_posts_description}}</p>
          </div>
        </div>
        <div class="card-body">
          <div id="recentPostsList" class="recent-posts-list">
            <div class="empty-state">
              <i class="bi bi-inbox"></i>
              <p>{{translations.sns.no_posts_yet}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Subscription Section -->
    <div class="settings-section" id="section-subscription">
      <div class="section-header">
        <h2 class="section-title">{{translations.setting.subscription}}</h2>
        <p class="section-description">Manage your subscription and billing</p>
      </div>

      <p id="user-plan" style="display: none;"></p>

      <!-- No Subscription Card -->
      <div id="no-subscription-section" class="settings-card premium-promo">
        <div class="card-body text-center">
          <div class="promo-icon">
            <i class="bi bi-stars"></i>
          </div>
          <h3 class="promo-title">{{translations.subscriptionFeatures.title}}</h3>
          <p class="promo-subtitle">{{translations.subscriptionFeatures.subtitle}}</p>
          
          <div class="features-grid">
            <div class="feature-item">
              <i class="bi bi-infinity"></i>
              <h4>{{translations.subscriptionFeatures.feature1_title}}</h4>
              <p>{{translations.subscriptionFeatures.feature1_desc}}</p>
            </div>
            <div class="feature-item">
              <i class="bi bi-image-fill"></i>
              <h4>{{translations.subscriptionFeatures.feature2_title}}</h4>
              <p>{{translations.subscriptionFeatures.feature2_desc}}</p>
            </div>
            <div class="feature-item">
              <i class="bi bi-camera-video-fill"></i>
              <h4>{{translations.subscriptionFeatures.feature3_title}}</h4>
              <p>{{translations.subscriptionFeatures.feature3_desc}}</p>
            </div>
            <div class="feature-item">
              <i class="bi bi-fire"></i>
              <h4>{{translations.subscriptionFeatures.feature4_title}}</h4>
              <p>{{translations.subscriptionFeatures.feature4_desc}}</p>
            </div>
            <div class="feature-item">
              <i class="bi bi-person-hearts"></i>
              <h4>{{translations.subscriptionFeatures.feature5_title}}</h4>
              <p>{{translations.subscriptionFeatures.feature5_desc}}</p>
            </div>
            <div class="feature-item">
              <i class="bi bi-lightning-charge-fill"></i>
              <h4>{{translations.subscriptionFeatures.feature6_title}}</h4>
              <p>{{translations.subscriptionFeatures.feature6_desc}}</p>
            </div>
          </div>
          
          <button class="btn btn-primary btn-lg mt-4" onclick="loadPlanPage()">
            <i class="bi bi-crown-fill me-2"></i>
            {{translations.subscriptionFeatures.cta_button}}
          </button>
          <p class="cta-note mt-2">{{translations.subscriptionFeatures.cta_note}}</p>
        </div>
      </div>

      <!-- Active Subscription Card -->
      <div id="active-subscription-section" class="settings-card" style="display: none;">
        <div class="card-header">
          <div class="card-icon">
            <i class="bi bi-crown-fill text-warning"></i>
          </div>
          <div class="card-header-content">
            <h3 class="card-title">{{translations.subscriptionFeatures.active_title}}</h3>
            <p class="card-subtitle">{{translations.subscriptionFeatures.active_subtitle}}</p>
          </div>
        </div>
        <div class="card-body">
          <div class="subscription-info">
            <div class="subscription-badge">
              <i class="bi bi-patch-check-fill"></i>
              <span id="active-plan-name">Premium</span>
            </div>
            <div class="subscription-details">
              <div class="detail-row">
                <span class="detail-label">{{translations.subscriptionFeatures.started}}</span>
                <span class="detail-value" id="subscription-start-date">-</span>
              </div>
              <div class="detail-row">
                <span class="detail-label">{{translations.subscriptionFeatures.renews}}</span>
                <span class="detail-value" id="subscription-renewal-date">-</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Day Pass Countdown -->
      <div id="day-pass-countdown-section" class="settings-card" style="display: none;">
        <div class="card-body text-center">
          <h4 class="mb-3">
            <i class="bi bi-clock-history me-2"></i>
            {{translations.setting.dayPassActiveTitle}}
          </h4>
          <p class="text-muted">{{translations.setting.dayPassExpiresIn}}</p>
          <div id="countdown-timer" class="countdown">
            <span id="hours">00</span>:<span id="minutes">00</span>:<span id="seconds">00</span>
          </div>
          <p id="day-pass-expired-message" class="text-danger mt-3" style="display: none;">
            {{translations.setting.dayPassExpired}}
            <button class="btn btn-primary mt-2" onclick="loadPlanPage()">
              {{translations.select_plan_here}}
            </button>
          </p>
        </div>
      </div>

      <button id="cancel-plan" class="btn btn-outline-danger btn-sm mt-3" style="display: none; opacity: 0.7;" data-user-id="{{user._id}}">
        {{translations.setting.cancelSubscription}}
      </button>
    </div>

    <!-- API Section -->
    <div class="settings-section" id="section-api">
      <div class="section-header">
        <h2 class="section-title">API</h2>
        <p class="section-description">Manage your API keys and integrations</p>
      </div>

      <!-- Premium Required Card for API -->
      <div id="api-premium-required" class="settings-card premium-required-card" style="display: none;">
        <div class="card-body text-center py-5">
          <div class="premium-icon-large mb-4">
            <i class="bi bi-gem"></i>
          </div>
          <h3 class="premium-title">{{translations.setting.api_premium_required_title}}</h3>
          <p class="premium-description">{{translations.setting.api_premium_required_desc}}</p>
          <button type="button" class="btn btn-premium-upgrade mt-3" onclick="loadPlanPage()">
            <i class="bi bi-star-fill me-2"></i>
            {{translations.setting.upgrade_to_premium}}
          </button>
        </div>
      </div>

      <!-- API Content (shown only for premium users) -->
      <div id="api-premium-content" style="display: none;">
        <!-- API Keys Card -->
        <div class="settings-card">
        <div class="card-header">
          <div class="card-icon">
            <i class="bi bi-key"></i>
          </div>
          <div class="card-header-content">
            <h3 class="card-title">API Keys</h3>
            <p class="card-subtitle">Create and manage API keys for external integrations</p>
          </div>
        </div>
        <div class="card-body">
          <!-- API Keys List -->
          <div id="apiKeysList" class="api-keys-list mb-3">
            <div class="loading-state">
              <div class="spinner-border spinner-border-sm text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
              <div class="mt-2 text-muted small">Loading API keys...</div>
            </div>
          </div>

          <!-- Create Button -->
          <button type="button" class="btn btn-primary w-100" id="createApiKeyBtn" onclick="createNewApiKey()">
            <i class="bi bi-plus-lg me-2"></i>Create New API Key
          </button>
          
          <div class="alert alert-info mt-3">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Important:</strong> API keys are shown only once when created. Store them securely.
          </div>
        </div>
      </div>

      <!-- API Documentation Card -->
      <div class="settings-card">
        <div class="card-header">
          <div class="card-icon">
            <i class="bi bi-book"></i>
          </div>
