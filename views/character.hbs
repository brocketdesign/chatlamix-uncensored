<!DOCTYPE html>
<html lang="{{lang}}">
{{> dashboard-header}}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <link rel="stylesheet" href="/css/character.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
</head>
<body class="explore-page">
    {{> dashboard-nav}}

<div class="profile-container" id="characterProfilePage" data-chat-id="{{#if chat}}{{chat._id}}{{/if}}" data-chat-personality="{{#if chat}}{{json chat.base_personality}}{{/if}}">
    {{#if chat}}
        <!-- Instagram-style Profile Header -->
        <div class="ig-profile-header">
            <!-- Profile Info Section -->
            <div class="ig-profile-info">
                <div class="ig-avatar-section">
                    <div class="ig-avatar-ring">
                        {{#if image}}
                            {{#unless isBlur}}
                                <img class="ig-avatar" src="{{image.imageUrl}}" alt="{{chat.name}}" id="mainProfileImage">
                            {{else}}
                                <img class="ig-avatar img-blur" src="{{image.imageUrl}}" alt="{{chat.name}}" onclick="{{#if user.isTemporary}}openLoginForm(){{else}}loadPlanPage(){{/if}}">
                            {{/unless}}
                        {{else}}
                            <img class="ig-avatar" src="{{default chat.chatImageUrl '/img/avatar.png'}}" alt="{{chat.name}}">
                        {{/if}}
                    </div>
                </div>
                
                <div class="ig-stats-row">
                    <div class="ig-stat">
                        <span class="ig-stat-number" id="imagesCount">0</span>
                        <span class="ig-stat-label">{{translations.images}}</span>
                    </div>
                    <div class="ig-stat">
                        <span class="ig-stat-number" id="videosCount">0</span>
                        <span class="ig-stat-label">{{translations.videos.title}}</span>
                    </div>
                    <div class="ig-stat">
                        <span class="ig-stat-number" id="messagesCount">0</span>
                        <span class="ig-stat-label">{{translations.profile_messages}}</span>
                    </div>
                </div>
            </div>

            <!-- Bio Section -->
            <div class="ig-bio-section">
                <h1 class="ig-display-name">{{chat.name}}</h1>
                {{#if chat.short_intro}}
                    <p class="ig-bio">{{chat.short_intro}}</p>
                {{else}}
                    <p class="ig-bio">{{chat.description}}</p>
                {{/if}}
            </div>

            <!-- Action Buttons -->
            <div class="ig-action-row">
                <a href="{{#if user.isTemporary}}#{{else}}/chat/{{chat._id}}{{/if}}" 
                   onclick="{{#if user.isTemporary}}openLoginForm(); return false;{{/if}}" 
                   class="ig-chat-btn track-chat-start-character-page" 
                   data-tracking-source="character_page"
                   data-chat-id="{{chat._id}}">
                    <i class="bi bi-chat-heart-fill"></i>
                    <span class="text-white">{{translations.startChattingNow}}</span>
                </a>
                {{#unless user.isTemporary}}
                    <button class="ig-secondary-btn character-follow-btn" 
                            data-chat-id="{{chat._id}}"
                            title="{{translations.follow.follow}}">
                        <i class="bi bi-bell-slash"></i>
                    </button>
                    <button class="ig-secondary-btn character-favorite-btn" 
                            data-chat-id="{{chat._id}}"
                            title="{{translations.favorite.addFavorite}}">
                        <i class="bi bi-star"></i>
                    </button>
                {{/unless}}
            </div>

            {{#if isAdmin}}
            <!-- Admin Controls -->
            <div class="ig-admin-controls">
                <button class="ig-admin-btn set-sfw-thumbnail-btn" 
                        data-id="{{chat._id}}" 
                        onclick="setSFWThumbnail(this);">
                    <i class="bi bi-image"></i>
                </button>
                <button class="ig-admin-btn chat-nsfw-toggle {{#if chat.nsfw}}nsfw{{else}}sfw{{/if}}" 
                        data-id="{{chat._id}}" 
                        onclick="toggleChatNSFW(this);">
                    <i class="bi {{#if chat.nsfw}}bi-eye-slash{{else}}bi-eye{{/if}}"></i>
                </button>
                <button class="ig-admin-btn delete-character-btn" 
                        data-id="{{chat._id}}" 
                        onclick="deleteCharacter(this);"
                        title="Delete character">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
            {{/if}}
        </div>

        <!-- Instagram-style Tab Navigation -->
        <div class="ig-tab-nav">
            <button class="ig-tab active" data-tab="images" title="{{translations.images}}">
                <i class="bi bi-grid-3x3"></i>
            </button>
            <button class="ig-tab" data-tab="videos" title="{{translations.videos.title}}">
                <i class="bi bi-play-btn"></i>
            </button>
            <button class="ig-tab" data-tab="about" title="{{translations.about}}">
                <i class="bi bi-person-badge"></i>
            </button>
        </div>

        <!-- Content Areas -->
        <div class="tab-content">
            <!-- Images Tab -->
            <div id="images-tab" class="tab-pane active">
                <!-- SFW/NSFW Toggle -->
                <div class="content-type-toggle justify-content-start" id="contentTypeToggle">
                    <label class="ig-toggle">
                        <input type="checkbox" id="showNsfwCharacterImages">
                        <span class="ig-toggle-slider"></span>
                        <span class="ig-toggle-label">Show NSFW</span>
                    </label>
                </div>
                
                <div class="media-grid" id="imagesGrid">
                    <!-- Loading state -->
                    <div class="loading-grid">
                        <div class="loading-item"></div>
                        <div class="loading-item"></div>
                        <div class="loading-item"></div>
                        <div class="loading-item"></div>
                        <div class="loading-item"></div>
                        <div class="loading-item"></div>
                    </div>
                </div>
            </div>

            <!-- Videos Tab -->
            <div id="videos-tab" class="tab-pane" style="display: none;">
                <div class="media-grid" id="videosGrid">
                    <!-- Videos will be loaded here -->
                </div>
            </div>

            <!-- About Tab -->
            <div id="about-tab" class="tab-pane" style="display: none;">
                <div class="ig-about-container">
                    <!-- Character Attributes Grid -->
                    <div class="ig-attributes-grid">
                        <!-- Style Card -->
                        <div class="ig-attribute-card">
                            <div class="ig-attribute-icon" style="background: linear-gradient(135deg, #8b5cf6, #a855f7);">
                                <i class="bi bi-palette-fill"></i>
                            </div>
                            <div class="ig-attribute-content">
                                <span class="ig-attribute-label">{{translations.profile_style}}</span>
                                <span class="ig-attribute-value">{{default chat.imageStyle 'Not specified'}}</span>
                            </div>
                        </div>

                        <!-- Gender Card -->
                        <div class="ig-attribute-card">
                            <div class="ig-attribute-icon" style="background: linear-gradient(135deg, #ec4899, #f472b6);">
                                <i class="bi bi-gender-ambiguous"></i>
                            </div>
                            <div class="ig-attribute-content">
                                <span class="ig-attribute-label">{{translations.profile_gender}}</span>
                                <span class="ig-attribute-value">{{default chat.gender 'Not specified'}}</span>
                            </div>
                        </div>

                        <!-- Content Rating Card -->
                        {{#if chat.nsfw}}
                        <div class="ig-attribute-card">
                            <div class="ig-attribute-icon" style="background: linear-gradient(135deg, #f59e0b, #fbbf24);">
                                <i class="bi bi-exclamation-triangle"></i>
                            </div>
                            <div class="ig-attribute-content">
                                <span class="ig-attribute-label">{{translations.profile_content_rating}}</span>
                                <span class="ig-attribute-value ig-nsfw-badge">18+</span>
                            </div>
                        </div>
                        {{/if}}
                    </div>

                    <!-- Character Rules Section -->
                    {{#if chat.rule}}
                    <div class="ig-section-card">
                        <div class="ig-section-header">
                            <i class="bi bi-bookmark-fill"></i>
                            <span>{{translations.character_rules_heading}}</span>
                        </div>
                        <p class="ig-section-text">{{chat.rule}}</p>
                    </div>
                    {{/if}}

                    <!-- Personality Section -->
                    <div id="characterPersonality"></div>

                    <!-- Tags Section -->
                    {{#if chat.tags}}
                    <div class="ig-tags-section">
                        <h5 class="ig-tags-title">{{translations.tags}}</h5>
                        <div class="ig-tags-list">
                            {{#each chat.tags}}
                                <a href="/search?q={{this}}" class="ig-tag">
                                    <i class="bi bi-hash"></i>{{this}}
                                </a>
                            {{/each}}
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>

        <!-- Similar Characters Section -->
        <div class="similar-section">
            <h5>{{translations.similar_characters_title}}</h5>
            <p class="text-muted small">{{translations.similar_characters_description}}</p>
            <div class="similar-grid" id="similarCharactersGrid">
                <!-- Similar characters will be loaded here -->
            </div>
        </div>

        <!-- Character Profile Scripts (only loaded when chat exists) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
        <script src="/js/favorites.js"></script>
        <script src="/js/character-followers.js"></script>
        <script src="/js/content-discovery-tracker.js"></script>
        <script src="/js/character-profile-loader.js"></script>
        <script src="/js/character-profile-ui.js"></script>
        <script src="/js/character-profile-interactions.js"></script>
        <script src="/js/character-infos.js"></script>
        <script src="/js/character.js"></script>

        <script>
        // Expose admin status to JavaScript
        window.isAdmin = {{#if isAdmin}}true{{else}}false{{/if}};

        // Initialize profile when DOM is ready
        document.addEventListener('DOMContentLoaded', function() {
            const profilePage = document.querySelector('#characterProfilePage');
            const chatId = profilePage?.dataset?.chatId || null;
            

            
            if (chatId) {
                // Initialize Instagram-style profile
                window.characterProfile = {
                    totalImages: 0,
                    totalVideos: 0,
                    currentChatId: chatId,
                    imagesLoading: false,
                    videosLoading: false,
                    videosLoaded: false,
                    // Separate pagination state for SFW and NSFW
                    contentType: 'SFW', // default to SFW
                    sfwPagination: {
                        currentPage: 0,
                        totalPages: 0
                    },
                    nsfwPagination: {
                        currentPage: 0,
                        totalPages: 0
                    }
                };
                
                // Initialize tabs and load data
                if (typeof initializeTabs === 'function') {
                    initializeTabs();
                }
                
                // Initialize content type toggle
                if (typeof initializeContentTypeToggle === 'function') {
                    initializeContentTypeToggle();
                }
                
                if (typeof loadCharacterData === 'function') {
                    loadCharacterData(chatId);
                }
                
                if (typeof initializeSharing === 'function') {
                    initializeSharing();
                }
                
                // Initialize favorite button
                initializeCharacterFavoriteButton(chatId);
                
                // Initialize follow button
                initializeCharacterFollowButton(chatId);
                
                if (typeof showDashboardFooter === 'function') {
                    showDashboardFooter();
                }
            }
        });
        
        /**
         * Initialize character favorite button on profile page
         */
        function initializeCharacterFavoriteButton(chatId) {
            if (!chatId || typeof Favorites === 'undefined') {
                return;
            }
            
            const favoriteBtn = document.querySelector('.character-favorite-btn');
            if (!favoriteBtn) {
                return;
            }
            
            // Check if character is already favorited
            Favorites.checkFavorite(chatId, function(isFavorited) {
                updateCharacterFavoriteButton(favoriteBtn, isFavorited);
            });
            
            // Add click handler
            favoriteBtn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                const currentState = favoriteBtn.classList.contains('favorited');
                
                // Optimistic update
                updateCharacterFavoriteButton(favoriteBtn, !currentState);
                
                // Toggle favorite
                Favorites.toggleFavorite(chatId, function(response) {
                    if (response && response.success) {
                        updateCharacterFavoriteButton(favoriteBtn, response.isFavorited);
                    } else {
                        // Revert on error
                        updateCharacterFavoriteButton(favoriteBtn, currentState);
                    }
                });
            });
        }
        
        /**
         * Update character favorite button visual state
         */
        function updateCharacterFavoriteButton(button, isFavorited) {
            const icon = button.querySelector('i');
            const FAVORITE_TEXT = window.translations?.favorite?.addFavorite || 'Add to favorites';
            const UNFAVORITE_TEXT = window.translations?.favorite?.removeFavorite || 'Remove from favorites';
            
            if (isFavorited) {
                button.classList.add('favorited');
                button.title = UNFAVORITE_TEXT;
                if (icon) {
                    icon.classList.remove('bi-star');
                    icon.classList.add('bi-star-fill');
                }
            } else {
                button.classList.remove('favorited');
                button.title = FAVORITE_TEXT;
                if (icon) {
                    icon.classList.remove('bi-star-fill');
                    icon.classList.add('bi-star');
                }
            }
        }
        
        /**
         * Initialize character follow button on profile page
         */
        function initializeCharacterFollowButton(chatId) {
            if (!chatId || typeof CharacterFollowers === 'undefined') {
                return;
            }
            
            const followBtn = document.querySelector('.character-follow-btn');
            if (!followBtn) {
                return;
            }
            
            // Check if user is already following this character
            CharacterFollowers.checkFollow(chatId, function(isFollowing) {
                updateCharacterFollowButton(followBtn, isFollowing);
            });
            
            // Add click handler
            followBtn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                // Get current state from cache if available, otherwise from UI
                const currentState = CharacterFollowers.followCache.has(chatId) 
                    ? CharacterFollowers.followCache.get(chatId)
                    : followBtn.classList.contains('following');
                
                // Optimistic update
                updateCharacterFollowButton(followBtn, !currentState);
                
                // Toggle follow
                CharacterFollowers.toggleFollow(chatId, function(response) {
                    if (response && response.success) {
                        updateCharacterFollowButton(followBtn, response.isFollowing);
                    } else {
                        // Revert on error
                        updateCharacterFollowButton(followBtn, currentState);
                    }
                });
            });
        }
        
        /**
         * Update character follow button visual state
         */
        function updateCharacterFollowButton(button, isFollowing) {
            const icon = button.querySelector('i');
            const FOLLOW_TEXT = window.translations?.follow?.follow || 'Follow to get notifications';
            const FOLLOWING_TEXT = window.translations?.follow?.following || 'Following - Click to unfollow';
            
            if (isFollowing) {
                button.classList.add('following');
                button.classList.remove('not-following');
                button.title = FOLLOWING_TEXT;
                if (icon) {
                    icon.classList.remove('bi-bell-slash');
                    icon.classList.add('bi-bell-fill');
                }
            } else {
                button.classList.remove('following');
                button.classList.add('not-following');
                button.title = FOLLOW_TEXT;
                if (icon) {
                    icon.classList.remove('bi-bell-fill');
                    icon.classList.add('bi-bell-slash');
                }
            }
        }
        </script>

    {{else}}
    <!-- Current Gallery Layout (when no chat is available) -->
    <div class="explore-container" id="characterGalleryPage">
        <!-- Stories-style Horizontal Chat Menu -->
        {{#unless user.isTemporary}}
        <section id="horizontal-chat-menu" class="d-none stories-bar">
            <div id="horizontal-chat-list" class="stories-list">
                <!-- Chat thumbnails will be loaded dynamically -->
                <div id="horizontal-chat-loading" class="stories-loading">
                    <div class="spinner-border spinner-border-sm" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </section>
        {{/unless}}

        <!-- Compact Filter Bar -->
        <section class="filter-bar">
        <!-- Query Tags Pills -->
        <div class="tags-scroll" id="query-tags-list">
            <div class="tags-loading">
                <div class="spinner-border spinner-border-sm" role="status"></div>
            </div>
        </div>
        
        <!-- Filter Icons -->
        <div class="filter-icons">
            <div class="dropdown">
                <button class="filter-icon-btn" data-bs-toggle="dropdown" id="gender-filter-dropdown">
                    <i class="bi bi-gender-ambiguous"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end filter-dropdown">
                    <li><a class="dropdown-item" href="#" data-gender="female">
                        <i class="bi bi-gender-female"></i> {{translations.sort.female}}
                    </a></li>
                    <li><a class="dropdown-item" href="#" data-gender="male">
                        <i class="bi bi-gender-male"></i> {{translations.sort.male}}
                    </a></li>
                    <li><a class="dropdown-item" href="#" data-gender="nonbinary">
                        <i class="bi bi-gender-trans"></i> {{translations.sort.nonBinary}}
                    </a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#" data-gender="">
                        <i class="bi bi-x-circle"></i> {{translations.sort.allGenders}}
                    </a></li>
                </ul>
            </div>
            <button class="filter-icon-btn" id="popular-chats-premium" title="{{translations.sort.hidePremium}}">
                <i class="bi bi-gem"></i>
            </button>
            <button class="filter-icon-btn" id="popular-chats-nsfw" title="{{translations.sort.hideNSFW}}">
                <i class="bi bi-eye-slash"></i>
            </button>
        </div>
    </section>

    <!-- Explore Grid Gallery -->
    <section class="explore-gallery">
        <!-- Latest Chats Gallery -->
        <div class="explore-grid" id="latest-chats-gallery"></div>
        <div id="latest-chats-pagination-controls" class="load-more-area"></div>
        
        <!-- Latest Video Chats Gallery -->
        <div class="explore-grid" id="latest-video-chats-gallery" style="display: none;"></div>
        <div id="latest-video-chats-pagination-controls" class="load-more-area" style="display: none;"></div>
        
        <!-- Popular Chats Gallery (Default) -->
        <div class="explore-grid popular-chats-gallery" id="chat-gallery"></div>
        <div id="chat-pagination-controls" class="load-more-area"></div>
        
        <!-- All Chats (Query-based) Gallery -->
        <div class="explore-grid" id="all-chats-container" style="display: none;"></div>
        <div class="explore-grid" id="all-chats-images-gallery" style="display: none;"></div>
        <div id="all-chats-images-pagination-controls" class="load-more-area" style="display: none;"></div>
    </section>

</div>

<link rel="stylesheet" href="/css/character-gallery.css">
<script src="/js/dashboard-category.js"></script>

<!-- Character Gallery Scripts -->
<script src="/js/favorites.js"></script>
<script src="/js/gallery-like.js"></script>
<script src="/js/modules/ui-helpers.js"></script>


<script>
$(document).ready(function() {
    // Initialize user ID for chat list
    window.userId = '{{user._id}}';
    
    // Initialize horizontal chat menu if user is logged in
    {{#unless user.isTemporary}}
    if (typeof window.initializeHorizontalChatMenu === 'function') {
        window.initializeHorizontalChatMenu();
    }
    // Also try displaying horizontal chat list directly
    if (typeof window.displayHorizontalChatList === 'function') {
        window.displayHorizontalChatList(window.userId);
    }
    {{/unless}}
    
    // Load query tags if the list element exists
    if ($('#query-tags-list').length > 0 && typeof window.loadQueryTags === 'function') {
        window.loadQueryTags();
    }
    
    // Initial load - Load recent characters gallery first
    if (typeof window.loadLatestChats === 'function') {
        window.loadLatestChats(1, true);
        // Mark the "Recent" button as active after a short delay
        setTimeout(function() {
            $('#reload-latest-chats').addClass('active btn-primary').removeClass('btn-outline-primary');
        }, 200);
    } else if (typeof window.loadPopularChats === 'function') {
        // Fallback to popular chats if loadLatestChats is not available
        window.loadPopularChats(1, true);
    }
    
    // Scroll to top on page load
    window.scrollTo(0, 0);
});

// Ensure translations are available for JavaScript modules
window.translations = window.translations || {};
window.translations.sort = window.translations.sort || {
    female: '{{translations.sort.female}}',
    male: '{{translations.sort.male}}',
    nonBinary: '{{translations.sort.nonBinary}}',
    allGenders: '{{translations.sort.allGenders}}',
    showPremium: '{{translations.sort.showPremium}}',
    hidePremium: '{{translations.sort.hidePremium}}',
    showNSFW: '{{translations.sort.showNSFW}}',
    hideNSFW: '{{translations.sort.hideNSFW}}'
};
window.translations.all = '{{translations.all}}';
window.translations.recent = '{{translations.recent}}';
window.translations.recentVideos = '{{translations.recentVideos}}';
window.translations.photorealistic = '{{translations.photorealistic}}';
window.translations.anime = '{{translations.anime}}';
window.translations.loadingMoreCharacters = '{{translations.loadingMoreCharacters}}';
window.translations.loadingMoreVideos = '{{translations.loadingMoreVideos}}';
window.translations.recentChats = '{{translations.recentChats}}';
window.translations.loading = '{{translations.loading}}';
</script>

        </div>
    {{/if}}
</div>
{{> dashboard-footer}}

<script src="/js/modules/popular-chats.js"></script>
<script src="/js/modules/latest-chats.js"></script>
<script src="/js/modules/chat-filters.js"></script>
<script src="/js/chat-list.js"></script>

</body>
</html>
