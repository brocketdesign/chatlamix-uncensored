<script>
// Translations and data
const translations = window.chatModelTestTranslations || {};
const availableModels = {{{availableModels}}};
const providers = {{{providers}}};
const templatePrompts = {{{templatePrompts}}};
const templateQuestions = {{{templateQuestions}}};

// State
let selectedModels = [];
let questions = [
    "Hey! How's your day going? ðŸ˜Š",
    "What's something interesting you learned recently?",
    "Tell me about something that made you smile today"
];
let testResults = null;
let allModels = {};
let allProviders = {};

// Initialize
document.addEventListener('DOMContentLoaded', function() {
    initializeTemplates();
    loadModels();
    initializeQuestions();
    attachEventListeners();
    updateLanguageCount();
    loadTestHistory();
});

// Initialize template functionality
function initializeTemplates() {
    // Initialize template prompts dropdown
    const promptsMenu = document.getElementById('templatePromptsMenu');
    Object.entries(templatePrompts).forEach(([key, template]) => {
        const li = document.createElement('li');
        li.innerHTML = `<a class="dropdown-item" href="#" onclick="loadTemplatePrompt('${key}')">${template.name}</a>`;
        promptsMenu.appendChild(li);
    });

    // Initialize template questions dropdown
    const questionsMenu = document.getElementById('templateQuestionsMenu');
    Object.entries(templateQuestions).forEach(([category, questionSet]) => {
        const li = document.createElement('li');
        li.innerHTML = `<a class="dropdown-item" href="#" onclick="loadTemplateQuestions('${category}')">${category.replace(/_/g, ' ').toUpperCase()}</a>`;
        questionsMenu.appendChild(li);
    });
}

// Load template prompt
function loadTemplatePrompt(templateKey) {
    const template = templatePrompts[templateKey];
    if (template) {
        document.getElementById('systemPrompt').value = template.prompt;
        // Show success feedback
        const btn = document.getElementById('templatePromptsBtn');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<i class="bi bi-check-circle text-success"></i> Loaded';
        setTimeout(() => {
            btn.innerHTML = originalText;
        }, 1500);
    }
}

// Load template questions
function loadTemplateQuestions(category) {
    const questionSet = templateQuestions[category];
    if (questionSet && Array.isArray(questionSet)) {
        questions = [...questionSet.slice(0, 5)]; // Limit to 5 questions
        renderQuestions();
        // Show success feedback
        const btn = document.getElementById('templateQuestionsBtn');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<i class="bi bi-check-circle text-success"></i> Loaded';
        setTimeout(() => {
            btn.innerHTML = originalText;
        }, 1500);
    }
}

// Load models and providers from database
async function loadModels() {
    try {
        // Load providers first
        const providersResponse = await fetch('/api/admin/chat-model-test/providers');
        if (providersResponse.ok) {
            const providersData = await providersResponse.json();
            allProviders = {};
            providersData.providers.forEach(provider => {
                allProviders[provider.name] = provider;
            });
        } else {
            // Fall back to passed providers data
            allProviders = {};
            providers.forEach(provider => {
                allProviders[provider.name] = provider;
            });
        }

        // Load models
        const modelsResponse = await fetch('/api/admin/chat-model-test/models');
        if (modelsResponse.ok) {
            const data = await modelsResponse.json();
            allModels = {};
            data.models.forEach(model => {
                allModels[model.key] = model;
            });
            initializeModelCheckboxes();
            populateModelsTable();
            setupProviderAutoFill();
        } else {
            console.error('Failed to load models from database');
            alert('Error: Could not load models from database. Please ensure database models are configured.');
            allModels = {};
        }
    } catch (error) {
        console.error('Error loading models:', error);
        alert('Error: Could not connect to model API. Please check your connection and try again.');
        allModels = {};
    }
}

// Setup provider auto-fill functionality
function setupProviderAutoFill() {
    const addProviderSelect = document.getElementById('modelProvider');
    const editProviderSelect = document.getElementById('editProvider');
    
    // Populate provider dropdowns
    [addProviderSelect, editProviderSelect].forEach(select => {
        if (!select) return;
        
        // Clear existing options except the first one
        const firstOption = select.querySelector('option[value=""]');
        select.innerHTML = '';
        if (firstOption) select.appendChild(firstOption);
        
        // Add provider options
        Object.entries(allProviders).forEach(([key, provider]) => {
            const option = document.createElement('option');
            option.value = provider.name;
            option.textContent = provider.displayName;
            option.dataset.baseUrl = provider.baseUrl;
            select.appendChild(option);
        });
    });

    // Auto-fill API URL when provider is selected (Add form)
    if (addProviderSelect) {
        addProviderSelect.addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const baseUrl = selectedOption.dataset.baseUrl;
            if (baseUrl) {
                document.getElementById('modelApiUrl').value = baseUrl;
            }
        });
    }

    // Auto-fill API URL when provider is selected (Edit form)
    if (editProviderSelect) {
        editProviderSelect.addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const baseUrl = selectedOption.dataset.baseUrl;
            if (baseUrl) {
                document.getElementById('editApiUrl').value = baseUrl;
            }
        });
    }
}

// Refresh models list
async function refreshModels() {
    await loadModels();
}

function initializeModelCheckboxes() {
    const container = document.getElementById('modelCheckboxes');
    container.innerHTML = '';
    
    Object.entries(allModels).forEach(([key, model]) => {
        // Skip inactive models for selection
        if (model.isActive === false) return;
        
        const div = document.createElement('div');
        div.className = 'form-check';
        const displayName = model.displayName || model.displayName;
        const description = model.description || model.description;
        
        div.innerHTML = `
            <input class="form-check-input model-select" type="checkbox" id="model-${key}" value="${key}">
            <label class="form-check-label" for="model-${key}">
                <strong>${displayName}</strong>
                ${model.category ? `<span class="badge bg-${model.category === 'premium' ? 'warning' : 'success'} ms-2">${model.category}</span>` : ''}
                <br>
                <small class="text-muted">${description}</small>
            </label>
        `;
        container.appendChild(div);
    });

    document.querySelectorAll('.model-select').forEach(checkbox => {
        checkbox.addEventListener('change', updateSelectedModels);
    });
    updateSelectedModels();
}

// Populate models management table
function populateModelsTable() {
    const tbody = document.getElementById('modelsTableBody');
    tbody.innerHTML = '';

    Object.entries(allModels).forEach(([key, model]) => {
        const row = tbody.insertRow();
        const statusBadge = model.isActive !== false ? 
            '<span class="badge bg-success">Active</span>' : 
            '<span class="badge bg-danger">Inactive</span>';
        
        const categoryBadge = model.category === 'premium' ? 
            '<span class="badge bg-warning">Premium</span>' : 
            '<span class="badge bg-success">Free</span>';
            
        const languages = (model.supportedLanguages || ['en']).join(', ').toUpperCase();
        
        row.innerHTML = `
            <td>
                <strong>${model.displayName}</strong>
                <br><small class="text-muted">${model.key}</small>
            </td>
            <td>${model.provider}</td>
            <td>${categoryBadge}</td>
            <td>${statusBadge}</td>
            <td>${model.maxTokens || 'N/A'}</td>
            <td><small>${languages}</small></td>
            <td>
                <div class="btn-group btn-group-sm">
                    <button class="btn btn-outline-primary" onclick="editModel('${model._id || model.key || key}')" title="Edit model">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-outline-danger" onclick="deleteModel('${model._id || model.key || key}')" title="Delete model">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </td>
        `;
    });
}

function updateSelectedModels() {
    selectedModels = Array.from(document.querySelectorAll('.model-select:checked')).map(cb => cb.value);
    const countEl = document.getElementById('selectedModelsCount');
    
    if (selectedModels.length === 0) {
        countEl.textContent = translations.no_models_selected;
    } else {
        countEl.textContent = `${translations.selected_models}`.replace('{{count}}', selectedModels.length);
    }
}

function initializeQuestions() {
    renderQuestions();
}

function renderQuestions() {
    const container = document.getElementById('questionsContainer');
    container.innerHTML = '';
    
    questions.forEach((question, index) => {
        const div = document.createElement('div');
        div.className = 'question-row';
        div.innerHTML = `
            <input type="text" class="form-control question-input" data-index="${index}" value="${question}" placeholder="${translations.placeholder_question}">
            <button class="btn btn-sm btn-outline-danger" onclick="removeQuestion(${index})">
                <i class="bi bi-trash"></i>
            </button>
        `;
        container.appendChild(div);
    });

    document.querySelectorAll('.question-input').forEach(input => {
        input.addEventListener('change', function() {
            const index = parseInt(this.getAttribute('data-index'));
            questions[index] = this.value;
            updateQuestionCount();
        });
    });

    updateQuestionCount();
}

function updateQuestionCount() {
    const count = questions.filter(q => q.trim() !== '').length;
    const countEl = document.getElementById('questionsCount');
    countEl.textContent = `${translations.questions_count}`.replace('{{count}}', count);
}

function removeQuestion(index) {
    questions.splice(index, 1);
    renderQuestions();
}

function attachEventListeners() {
    document.getElementById('addQuestionBtn').addEventListener('click', addQuestion);
    document.getElementById('runTestBtn').addEventListener('click', runTest);
    document.getElementById('resetPromptBtn').addEventListener('click', resetPrompt);
    document.getElementById('resetTestBtn').addEventListener('click', resetTest);
    document.getElementById('exportResultsBtn').addEventListener('click', exportResults);
    document.getElementById('selectAllLanguagesBtn').addEventListener('click', selectAllLanguages);
    document.getElementById('clearLanguagesBtn').addEventListener('click', clearLanguages);
    document.getElementById('clearQuestionsBtn').addEventListener('click', clearAllQuestions);

    // Model management form handlers
    document.getElementById('addModelForm').addEventListener('submit', handleAddModel);
    document.getElementById('editModelForm').addEventListener('submit', handleEditModel);

    // Attach listeners to language checkboxes with new class name to avoid jQuery conflict
    const langCheckboxes = document.querySelectorAll('.model-language-select');
    langCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function(e) {
            console.log('Language checkbox CHANGE:', this.id, 'Checked:', this.checked);
            updateLanguageCount();
        });
    });

    document.querySelectorAll('input[name="viewMode"]').forEach(radio => {
        radio.addEventListener('change', switchView);
    });
}

function addQuestion() {
    if (questions.length < 5) {
        questions.push('');
        renderQuestions();
    }
}

function resetPrompt() {
    document.getElementById('systemPrompt').value = 'You are a helpful, friendly, and engaging AI assistant designed for casual conversation. Respond naturally like you would in a chat app (WhatsApp, etc.). Keep responses conversational, warm, and appropriately brief unless more detail is requested. Use emojis sparingly but naturally. Be supportive, curious about the user, and maintain a friendly tone throughout the conversation.';
}

function selectAllLanguages() {
    document.querySelectorAll('.model-language-select').forEach(checkbox => {
        checkbox.checked = true;
    });
    updateLanguageCount();
}

function clearLanguages() {
    document.querySelectorAll('.model-language-select').forEach(checkbox => {
        checkbox.checked = false;
    });
    updateLanguageCount();
}

function updateLanguageCount() {
    const selected = Array.from(document.querySelectorAll('.model-language-select:checked')).length;
    const countEl = document.getElementById('selectedLanguagesCount');
    if (selected === 0) {
        countEl.textContent = 'No languages selected';
    } else if (selected === 1) {
        countEl.textContent = '1 language selected';
    } else {
        countEl.textContent = `${selected} languages selected`;
    }
}

function resetTest() {
    // Reset models
    document.querySelectorAll('.model-select').forEach(checkbox => {
        checkbox.checked = false;
    });
    updateSelectedModels();

    // Reset languages (keep at least English selected)
    document.getElementById('lang-en').checked = true;
    document.getElementById('lang-fr').checked = false;
    document.getElementById('lang-ja').checked = false;
    updateLanguageCount();

    // Reset questions back to chat-focused defaults
    questions = [
        "Hey! How's your day going? ðŸ˜Š",
        "What's something interesting you learned recently?",
        "Tell me about something that made you smile today"
    ];
    renderQuestions();

    // Reset system prompt
    resetPrompt();

    // Reset max tokens
    document.getElementById('maxTokens').value = 1000;

    // Clear results
    testResults = null;
    document.getElementById('resultsTableBody').innerHTML = '<tr><td colspan="6" class="text-center text-muted py-4">No results yet</td></tr>';
    document.getElementById('exportResultsBtn').disabled = true;

    // Show confirmation
    alert('Test configuration has been reset to defaults');
}

// Clear all questions
function clearAllQuestions() {
    if (confirm('Are you sure you want to clear all questions?')) {
        questions = [];
        renderQuestions();
    }
}

// Model Management Functions

// Handle add model form submission
async function handleAddModel(event) {
    event.preventDefault();
    
    const form = event.target;
    const formData = new FormData(form);
    
    // Get supported languages
    const supportedLanguages = [];
    ['en', 'fr', 'ja', 'hi'].forEach(lang => {
        if (document.getElementById(`lang_${lang}`).checked) {
            supportedLanguages.push(lang);
        }
    });
    
    const modelData = {
        key: formData.get('key'),
        displayName: formData.get('displayName'),
        description: formData.get('description'),
        provider: formData.get('provider'),
        modelId: formData.get('modelId'),
        apiUrl: formData.get('apiUrl'),
        category: formData.get('category'),
        maxTokens: parseInt(formData.get('maxTokens')),
        isActive: formData.get('isActive') === 'true',
        supportedLanguages
    };
    
    try {
        const response = await fetch('/api/admin/chat-model-test/models', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(modelData)
        });
        
        const result = await response.json();
        
        if (response.ok) {
            alert('Model added successfully!');
            bootstrap.Modal.getInstance(document.getElementById('addModelModal')).hide();
            form.reset();
            await loadModels(); // Refresh models list
        } else {
            alert(`Error: ${result.error}`);
        }
    } catch (error) {
        console.error('Error adding model:', error);
        alert('Failed to add model. Please try again.');
    }
}

// Edit model
async function editModel(modelId) {
    try {
        console.log('Editing model with ID:', modelId);
        
        // Find model in current data
        const model = Object.values(allModels).find(m => m._id === modelId || m.key === modelId);
        if (!model) {
            console.error('Model not found in allModels:', modelId);
            console.log('Available models:', Object.keys(allModels));
            alert('Model not found');
            return;
        }
        
        console.log('Found model:', model);
        
        // Populate edit form
        document.getElementById('editModelId').value = model._id || model.key || modelId;
        document.getElementById('editKey').value = model.key;
        document.getElementById('editDisplayName').value = model.displayName;
        document.getElementById('editDescription').value = model.description;
        document.getElementById('editProvider').value = model.provider;
        document.getElementById('editCategory').value = model.category || 'free';
        document.getElementById('editModelIdField').value = model.modelId;
        document.getElementById('editApiUrl').value = model.apiUrl;
        document.getElementById('editMaxTokens').value = model.maxTokens || 2048;
        document.getElementById('editIsActive').value = model.isActive !== false ? 'true' : 'false';
        
        // Set supported languages
        ['en', 'fr', 'ja', 'hi'].forEach(lang => {
            const checkbox = document.getElementById(`edit_lang_${lang}`);
            checkbox.checked = (model.supportedLanguages || ['en']).includes(lang);
        });
        
        // Show modal
        new bootstrap.Modal(document.getElementById('editModelModal')).show();
    } catch (error) {
        console.error('Error preparing edit form:', error);
        alert('Failed to load model data for editing');
    }
}

// Handle edit model form submission
async function handleEditModel(event) {
    event.preventDefault();
    
    const form = event.target;
    const formData = new FormData(form);
    const modelId = formData.get('id');
    
    console.log('Updating model with ID:', modelId);
    console.log('Form data:', Object.fromEntries(formData.entries()));
    
    // Get supported languages
    const supportedLanguages = [];
    ['en', 'fr', 'ja', 'hi'].forEach(lang => {
        if (document.getElementById(`edit_lang_${lang}`).checked) {
            supportedLanguages.push(lang);
        }
    });
    
    const updateData = {
        key: formData.get('key'),
        displayName: formData.get('displayName'),
        description: formData.get('description'),
        provider: formData.get('provider'),
        modelId: formData.get('modelId'),
        apiUrl: formData.get('apiUrl'),
        category: formData.get('category'),
        maxTokens: parseInt(formData.get('maxTokens')),
        isActive: formData.get('isActive') === 'true',
        supportedLanguages
    };
    
    try {
        const response = await fetch(`/api/admin/chat-model-test/models/${modelId}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(updateData)
        });
        
        const result = await response.json();
        
        if (response.ok) {
            alert('Model updated successfully!');
            bootstrap.Modal.getInstance(document.getElementById('editModelModal')).hide();
            await loadModels(); // Refresh models list
        } else {
            alert(`Error: ${result.error}`);
        }
    } catch (error) {
        console.error('Error updating model:', error);
        alert('Failed to update model. Please try again.');
    }
}

// Delete model
async function deleteModel(modelId) {
    if (!confirm('Are you sure you want to delete this model? This action cannot be undone.')) {
        return;
    }
    
    try {
        const response = await fetch(`/api/admin/chat-model-test/models/${modelId}`, {
            method: 'DELETE'
        });
        
        const result = await response.json();
        
        if (response.ok) {
            alert('Model deleted successfully!');
            await loadModels(); // Refresh models list
        } else {
            alert(`Error: ${result.error}`);
        }
