/**
 * Decode base64 content safely
 * @param {string} base64Content - Base64 encoded content
 * @returns {string} Decoded content
 */
function decodeBase64(base64Content) {
    try {
        if (!base64Content) return '';
        return Buffer.from(base64Content, 'base64').toString('utf-8');
    } catch (error) {
        console.error('Error decoding base64:', error);
        return '[Unable to decode response content]';
    }
}

/**
 * Decode base64 in browser (client-side) with proper UTF-8 support
 * @param {string} base64Content - Base64 encoded content
 * @returns {string} Decoded content
 */
function decodeBase64Browser(base64Content) {
    try {
        if (!base64Content) return '';
        
        // Method 1: Use TextDecoder (preferred for UTF-8)
        try {
            // First decode base64 to binary string
            const binaryString = atob(base64Content);
            
            // Convert binary string to UTF-8
            const bytes = new Uint8Array(binaryString.length);
            for (let i = 0; i < binaryString.length; i++) {
                bytes[i] = binaryString.charCodeAt(i);
            }
            
            // Use TextDecoder for proper UTF-8 decoding
            const decoder = new TextDecoder('utf-8');
            const decoded = decoder.decode(bytes);
            
            // Log for debugging Japanese character issues
            if (decoded.match(/[\u3040-\u309F\u30A0-\u30FF\u4E00-\u9FAF]/)) {
                console.log('[UTF-8 Decode] Japanese characters detected and decoded successfully');
            }
            
            return decoded;
        } catch (textDecoderError) {
            console.warn('TextDecoder failed, trying fallback method:', textDecoderError);
            
            // Method 2: Fallback using decodeURIComponent and escape (for older browsers)
            try {
                const binaryString = atob(base64Content);
                const escapedBinaryString = Array.prototype.map.call(binaryString, function(char) {
                    return '%' + ('00' + char.charCodeAt(0).toString(16)).slice(-2);
                }).join('');
                return decodeURIComponent(escapedBinaryString);
            } catch (fallbackError) {
                console.error('Fallback decoding also failed:', fallbackError);
                throw fallbackError;
            }
        }
    } catch (error) {
        console.error('Error decoding base64:', error);
        console.error('Base64 content length:', base64Content ? base64Content.length : 0);
        return '[Unable to decode response content - encoding issue]';
    }
}

